<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magedelight" translate="label" sortOrder="300">
            <label>Magedelight</label>
        </tab>
        <section id="magedelight" translate="label" type="text" sortOrder="1" showInStore="1" showInDefault="1" showInWebsite="1">
            <class>separator-top</class>
            <label>Giftcard</label>
            <tab>magedelight</tab>
            <resource>Magedelight_Giftcard::config_giftcard</resource>
            <group id="license" translate="label" type="text" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>License Configuration</label>
                <field id="serial_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Serial Key</label>
                    <comment><![CDATA[Enter the serial key that you received at time of purchase.]]></comment>
                </field>
                <field id="activation_key" translate="label" type="text" sortOrder="2" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Activation Key</label>
                    <comment><![CDATA[Enter the activation key that you received at time of purchase.]]></comment>
                </field>
            </group>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>General Configuration</label>
                <field id="enable_giftcard" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Giftcard</label>
                    <comment>When you disable the extension, Make Sure you also disable the assinged Category.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="giftcard_in_cart" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Giftcard For Giftcard Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If Set to Yes, Allow Discount for Giftcard Products.</comment>
                </field>
                <field id="lifetime" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Lifetime</label>
                    <validate>validate-greater-than-zero</validate>
                    <comment>Default Validity for Giftcard Codes.</comment>
                </field>
            </group>
            <group id="email_setting" translate="label" type="text" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>Email Settings</label>
                <field id="email_from" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Notification Email From</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
